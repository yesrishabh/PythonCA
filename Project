def SilverMedal2024():
  
    for medalist in medalists:
        if medalist['Year'] == 2024:
            return medalist['Silver']['Name']
    return "No data for 2024"

def NeerajMedals():
    NeerajChopraMEdals = 0
    for year in medalists:
        for medal_type in ["Gold", "Silver", "Bronze"]:
            if year[medal_type]["Name"] == "Neeraj Chopra":
                NeerajChopraMEdals += 1
    return NeerajChopraMEdals

def IndiaMedals():
    IndiaMedalist = 0
    for year in medalists:
        for medal_type in ["Gold", "Silver", "Bronze"]:
            if year[medal_type]["Country"] == "India":
                IndiaMedalist += 1
    return IndiaMedalist

def IndiaFirstMedalYear():
    FirstMedal = None
    for year in medalists:
        for medal_type in ["Gold", "Silver", "Bronze"]:
            if year[medal_type]["Country"] == "India":
                FirstMedal = year["Year"]
                return FirstMedal
    return None

def GoldMedalistCountry():
    GoldCountry = set(medalist['Gold']['Country'] for medalist in medalists)
    return len(GoldCountry)

def MostSilverMedals():
    MostSilver = {}
    for year in medalists:
        country = year["Silver"]["Country"]
        MostSilver[country] = MostSilver.get(country, 0) + 1
    MostSilver = max(MostSilver, key=MostSilver.get)
    return MostSilver

def BothGoldAndSilver():
    GoldAndSilver = sum(1 for year in medalists if year["Gold"]["Country"] == year["Silver"]["Country"])
    return GoldAndSilver

def MostMedalist():
    Medals = {}
    for year in medalists:
        for medal in ["Gold", "Silver", "Bronze"]:
            country = year[medal]["Country"]
            Medals[country] = Medals.get(country, 0) + 1
    Medals = max(Medals, key=Medals.get)
    return Medals

def Medalist2024():
    In2024 = next(medalist for medalist in medalists if medalist['Year'] == 2024)
    return {
        "Gold": f"{In2024['Gold']['Name']} from {In2024['Gold']['Country']}",
        "Silver": f"{In2024['Silver']['Name']} from {In2024['Silver']['Country']}",
        "Bronze": f"{In2024['Bronze']['Name']} from {In2024['Bronze']['Country']}",
    }

def MultipleMedalsInAYear():
    from collections import defaultdict
    athlete_medals = defaultdict(set)
    for medalist in medalists:
        athlete_medals[medalist['Gold']['Name']].add(medalist['Year'])
        athlete_medals[medalist['Silver']['Name']].add(medalist['Year'])
        athlete_medals[medalist['Bronze']['Name']].add(medalist['Year'])
    return {athlete: sorted(years) for athlete, years in athlete_medals.items() if len(years) > 1}

def main():
    while True:
        try:
            question = int(input("Enter question number 1 to 10 or 0 to exit: "))
            if question == 0:
                print("program dismissed")
                break
            elif question == 1:
                print("Q1. Silver medal win in 2024:")
                print(SilverMedal2024())
            elif question == 2:
                print("Q2. Number of medals Neeraj Chopra won:")
                print(NeerajMedals())
            elif question == 3:
                print("Q3. The Number of medals won by India:")
                print(IndiaMedals())
            elif question == 4:
                print("Q4. In Which Year India won its first medal:")
                year = IndiaFirstMedalYear()
                if year:
                    print(f"India won its first medal in {year}.")
                else:
                    print("India did not win a medal in the provided data.")
            elif question == 5:
                print("Q5. Different Countries won gold medal:")
                print(GoldMedalistCountry())
            elif question == 6:
                print("Q6. Country which won the most silver medals in this event:")
                print(MostSilverMedals())
            elif question == 7:
                print("Q7. How many times has the same country won both gold and silver in the same year:")
                print(BothGoldAndSilver())
            elif question == 8:
                print("Q8. Country with the most medalists overall (gold, silver, and bronze combined):")
                print(MostMedalist())
            elif question == 9:
                print("Q9. Names of the players and their countries who won gold, silver, and bronze medals in 2024:")
                medals = Medalist2024()
                for medal_type, details in medals.items():
                    print(f"{medal_type}: {details}")
            elif question == 10:
                print("Q10. Athletes who won medals in more than one year:")
                athletes = MultipleMedalsInAYear()
                for athlete, years in athletes.items():
                    print(f"{athlete} won medals in the years: {years}")
            else:
                print("Invalid question number")
        except ValueError:
            print("Invalid input")
if __name__ == "__main__":
    main()
