    {"Year": 2024, "City": "Paris", "Gold": {"Name": "Arshad Nadeem", "Country": "Pakistan"}, "Silver": {"Name": "Neeraj Chopra", "Country": "India"}, "Bronze": {"Name": "Anderson Peters", "Country": "Grenada"}}
